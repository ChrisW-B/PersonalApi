{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "client/",
    "public/",
    "webpack-cache/"
  ],
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "public/build/server/index.js",
    "db/**"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}